<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">
            <i class="bi bi-box-seam me-2"></i>Product Details
          </h4>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">ID:</strong>
            </div>
            <div class="col-sm-8">
              <span class="badge bg-secondary">#<%= @product.id %></span>
            </div>
          </div>

          <hr>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">Name:</strong>
            </div>
            <div class="col-sm-8">
              <h5 class="mb-0"><%= @product.name %></h5>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">Category:</strong>
            </div>
            <div class="col-sm-8">
              <span class="badge bg-info text-dark"><%= @product.category || 'N/A' %></span>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">Price:</strong>
            </div>
            <div class="col-sm-8">
              <h5 class="text-success mb-0"><%= number_to_currency(@product.price || 0, unit: "â‚º") %></h5>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">Stock:</strong>
            </div>
            <div class="col-sm-8">
              <span class="badge <%= @product.stock && @product.stock > 0 ? 'bg-success' : 'bg-warning' %>">
                <%= @product.stock || 'N/A' %>
              </span>
            </div>
          </div>

          <% if @product.external_id %>
            <hr>
            <div class="row mb-3">
              <div class="col-sm-4">
                <strong class="text-muted">External ID:</strong>
              </div>
              <div class="col-sm-8">
                <small class="text-muted font-monospace"><%= @product.external_id %></small>
              </div>
            </div>
          <% end %>

          <hr>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">Created At:</strong>
            </div>
            <div class="col-sm-8">
              <small class="text-muted"><%= @product.created_at.strftime('%d.%m.%Y %H:%M') %></small>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong class="text-muted">Updated At:</strong>
            </div>
            <div class="col-sm-8">
              <small class="text-muted"><%= @product.updated_at.strftime('%d.%m.%Y %H:%M') %></small>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light">
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to products_path, class: 'btn btn-outline-secondary' do %>
              <i class="bi bi-arrow-left me-1"></i> Back to Products
            <% end %>
            <div>
              <%= link_to edit_product_path(@product), class: 'btn btn-warning me-2' do %>
                <i class="bi bi-pencil me-1"></i> Edit
              <% end %>
              <%= button_to product_path(@product), 
                  method: :delete, 
                  class: 'btn btn-danger d-inline' do %>
                <i class="bi bi-trash me-1"></i> Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
